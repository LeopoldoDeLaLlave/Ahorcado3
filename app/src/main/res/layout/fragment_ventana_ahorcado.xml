<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".MainActivity"
              android:orientation="vertical"
              >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="_ _ _ _ _"
        android:layout_weight="2"
        android:textSize="62sp"
        android:id="@+id/palabraConGuiones"
        android:layout_gravity="center_vertical|top"
        android:gravity="center_vertical|center_horizontal"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/imagenAhorcado"
        android:src="@drawable/ahorcado_0"></ImageView>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="A"
            android:textSize="25sp"
            android:id="@+id/botonA"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="B"
            android:textSize="25sp"
            android:id="@+id/botonB"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="C"
            android:textSize="25sp"
            android:id="@+id/botonC"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="D"
            android:textSize="25sp"
            android:id="@+id/botonD"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="E"
            android:textSize="25sp"
            android:id="@+id/botonE"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="F"
            android:textSize="25sp"
            android:id="@+id/botonF"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="G"
            android:textSize="25sp"
            android:id="@+id/botonG"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="H"
            android:textSize="25sp"
            android:id="@+id/botonH"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="I"
            android:textSize="25sp"
            android:id="@+id/botonI"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="J"
            android:textSize="25sp"
            android:id="@+id/botonJ"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="K"
            android:textSize="25sp"
            android:id="@+id/botonK"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="L"
            android:textSize="25sp"
            android:id="@+id/botonL"></Button>
