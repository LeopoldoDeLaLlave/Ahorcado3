            android:id="@+id/botonVacio"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="X"
            android:textSize="25sp"
            android:id="@+id/botonX"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="Y"
            android:textSize="25sp"
            android:id="@+id/botonY"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="Z"
            android:textSize="25sp"
            android:id="@+id/botonZ"></Button>
    </LinearLayout>


</LinearLayout>