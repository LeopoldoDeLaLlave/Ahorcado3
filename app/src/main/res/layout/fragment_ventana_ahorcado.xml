            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="N"
            android:textSize="25sp"
            android:id="@+id/botonN"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="Ã‘"
            android:textSize="25sp"
            android:id="@+id/botonEnie"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="O"
            android:textSize="25sp"
            android:id="@+id/botonO"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="P"
            android:textSize="25sp"
            android:id="@+id/botonP"></Button>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="Q"
            android:textSize="25sp"
            android:id="@+id/botonQ"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="R"
            android:textSize="25sp"
            android:id="@+id/botonR"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="S"
            android:textSize="25sp"
            android:id="@+id/botonS"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="T"
            android:textSize="25sp"
            android:id="@+id/botonT"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
            android:text="U"
            android:textSize="25sp"
            android:id="@+id/botonU"></Button>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="botonPulsado"
